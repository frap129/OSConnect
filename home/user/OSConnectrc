# Ask for OS on connect
export PS1="[\e[31m$(whoami)\e[0m@\e[36mArch\e[0m \w\[$(tput sgr0)\]]: "
if ! hash apt 2>/dev/null; then
  cd ~
else 
  cd ~
  if ! [ "$SCRIPTED" = "true" ]; then
    export SCRIPTED=true && script /dev/null; &> /dev/null
  fi;
  echo "Welcome to Ubuntu!";
  export PS1="[\e[31m$(whoami)\e[0m@\[\033[35m\]Ubuntu\[\033[0m\] \w\[$(tput sgr0)\]]: 
";
  source .ubunturc
fi;
